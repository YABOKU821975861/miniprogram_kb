/* component/header/header.wxss */
.header {
  height: 100rpx;
  width: 100%;
}

/* 头部容器 */
.hdContainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  width: 100%;
}

/* 头部image元素 */
.hdContainer .hdlogo {
  height: 100%;
  width: 100rpx;
}

.hdContainer .logo, .hdContainer .hdright {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.hdright {
  position: relative;
}

.hdright .btn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  opacity: 0; /*透明*/
}

.hdright .hdrightImg {
  width: 50px;
  height: 50px;
  animation: dh infinite;
  animation-timing-function:linear;
}