page {
  overflow: hidden;
  height:100%;
} 

.screen {
  position: absolute;
  /* background:tomato; */
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  -webkit-overflow-scrolling: touch;
}

.screen1 {
  overflow-y: scroll;
  margin-top: 180rpx;
  box-sizing: border-box;
  background: tomato;
}

.screen2 {
  padding: 0;
  box-sizing: border-box;
  background: tomato;
}


