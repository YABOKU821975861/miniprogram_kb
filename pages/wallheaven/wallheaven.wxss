.screen2 .contact {
  height: 100%;
  /* background : tomato; */
  position: relative;
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}

.flxBtn {
  display: flex;
  margin: 16rpx;
  flex-direction: row;
  justify-content: space-around;
}

.flxBtn .btn {
  width: 150px;
  height: 40px;
  font-size: 120%;
  margin: 8px 8px;
  outline-width: 0;
  -webkit-appearance: none;
}

.btn1 {
  color:tomato; 
  box-shadow: 0 8px 17px rgba(0, 0, 0, 0.3);
}

.btn2 {
  background: tomato;
  color: #fff; 
  border: 0 solid #0010ae; 
  box-shadow: 0 8px 17px rgba(0, 0, 0, 0.3);
}

.screen2 .text {
  -webkit-transition: transform ease-in-out 300ms;
  transition: transform ease-in-out 300ms;
  -webkit-transform: scale(0.6);
  transform: scale(0.6);
}
.txt {
  color: antiquewhite;
}

.enter.text {
  transform: none;
}

.Rm {
  font-size: medium;
  margin: 10rpx auto;
}

