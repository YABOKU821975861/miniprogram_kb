.conBox {
  padding: 60rpx 0;
  background: rgb(26, 68, 125);
}

.conBox:nth-child(2n) {
  background: #fff;
}

.boxTit {
  width: 500rpx;
  height: 70rpx;
  background: rgb(235, 254, 137);
  border-radius: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: rgb(121, 64, 31);
  margin: 0 auto;
  position: relative;
  margin-bottom: 20px;
}

.boxTit::before {
  display: block;
  content: '';
  width: 100%;
  height: 100%;
  border: 1px solid rgb(235, 254, 137);
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 70rpx;
  transform: scale(1.04, 1.3);
}

.boxInfo .boxInfoImg {
  width:750rpx; 
  height:400rpx; 
  background: gray;
  text-align: center;
  position: relative;
}

.boxInfo .boxInfoImg::before {
  content: 'IMG';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.boxInfo .boxInfoText{
  padding: 40rpx 26rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  color: #fff;
  /* line-height: 1.8em; */
}

.boxInfo .boxInfoText view {
  width: 50%;
  line-height: 1.8em;
  padding-left: 15rpx;
  box-sizing: border-box;
}

.boxInfo .boxInfoText view::before {
  content: '‚óè';
  margin-right: 10rpx;
}

.conBox:nth-child(2n) .boxInfo .boxInfoText {
  color: black;
}